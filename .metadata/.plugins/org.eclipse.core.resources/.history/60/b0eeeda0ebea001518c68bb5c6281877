import City


def makeMap(fileName):
    cityMap =[]
    cityNames = []
    
    mapFile = open(fileName)
    line = mapFile.readline()
    
    while line != "":
        [city1,city2,dist] = line.split(" ")
        if city1 not in cityNames:
            cityNames.append(city1)
            cityMap.append(City.City(city1))
        
        if city2 not in cityNames:
                        cityNames.append(city1)
            cityMap.append(City.City(city1))
        
        
        line = mapFile.readline()
        
    mapFile.close()
    return cityMap
