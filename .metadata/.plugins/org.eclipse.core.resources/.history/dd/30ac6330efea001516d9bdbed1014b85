class City(object):
    '''
    classdocs
    '''
    


    def __init__(self, name):
        '''
        Constructor
        '''
        
        self.name = name
        self.neighbors = {
                    "city/dist": [],
                    "city/pheramone": []
        }
    
        
    def addNeighbor(self, num, dist):
        self.neighbors['city/dist'].append((num, dist))
        self.neighbors['city/pheramone'].append([num,0])
        return
                          



        
