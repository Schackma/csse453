class City(object):
    '''
    classdocs
    '''
    


    def __init__(self, name):
        '''
        Constructor
        '''
        
        self.name = name
        self.neighbors = {
                    "city, dist": []
                    "city, pheramone": []
        }
    
        
    def addNeighbor(self, num, dist):
        self.neighbors.append((num, dist))
        return
                          



        
